<div class="d-ruby-text">
  <%= link_to '', invoice_purchase_orders_path(@invoice), class: 'purchase-action purchase-action--back', title: 'Back To Purchase Orders' %>
  <h1>Edit Purchase Order</h1>
</div>
<%= form_with model: @purchase_order, url: invoice_purchase_order_path(@invoice, @purchase_order), class: 'purchase-order-form' do |f| %>
  <div class="form-group">
    <label class="control-label">Client Name</label>
    <div>
      <%= f.text_field :client_name, class: 'field field--client-name form-control input-lg' %>
    </div>
    <div class="error-message error-message--client-name"></div>
  </div>
  <div class="form-group">
    <label class="control-label">Amount</label>
    <div>
      <%= f.text_field :amount, class: 'field field--amount form-control input-lg' %>
    </div>
    <div class="error-message error-message--amount"></div>
  </div>
  <div class="form-group">
    <label class="control-label">Tax</label>
    <div>
      <%= f.text_field :tax, class: 'field field--tax form-control input-lg' %>
    </div>
    <div class="error-message error-message--tax"></div>
  </div>
  <div class="form-group">
    <label class="control-label">Vendor</label>
    <div>
      <%= f.text_field :vendor, class: 'field field--vendor form-control input-lg' %>
    </div>
    <div class="error-message error-message--vendor"></div>
  </div>
  <div class="form-group">
    <label class="control-label">Status</label>
    <div>
      <%= f.select :status, options_for_select(%i[draft paid delivered], @purchase_order.status), {:include_blank => 'Please Select'}, {class: 'field field--status form-control input-lg'} %>
    </div>
    <div class="error-message error-message--status"></div>
  </div>
  <div class="modal__buttons-container">
    <button class="p-button">Update</button>
  </div>
<% end %>
